rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // User can only read and write their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    match /pets/{petId} {
      // Only authenticated users can create, read, update, or delete pet documents
      allow create, read, update, delete: if request.auth != null;
      
      // Optional: Ensure users can only modify their own pets
      allow update, delete: if request.auth.uid == resource.data.ownerId;
    }
    
    // Default deny all other read/write operations
    match /{document=**} {
      allow read, write: if false;
    }
  }
}